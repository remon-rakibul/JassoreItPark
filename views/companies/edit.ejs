<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Edit <%= company.name %></h1>
        <div style="margin: 25px auto; width: 30%;">
            <form action="/companies/<%= company._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="company[name]" value="<%= company.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="company[image]" value="<%= company.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="company[description]" value="<%= company.description %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-default btn-lg btn-block">Update</button>
                </div>
            </form>
            <a href="/companies/<%= company._id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>