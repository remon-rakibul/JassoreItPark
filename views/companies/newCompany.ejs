<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Add The New Company</h1>
        <div style="margin: 25px auto; width: 30%;">
            <form action="/companies" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="newCompanyName" placeholder="Enter The Company Name">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="newCompanyImage" placeholder="Enter The Company Image">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="newCompanyDescription" placeholder="Enter The Company Description">
                </div>
                <div class="form-group">
                    <button class="btn btn-default btn-lg btn-block">submit</button>
                </div>
            </form>
            <a href="/companies">Back To Companies</a>
        </div>
    </div>
</div>

