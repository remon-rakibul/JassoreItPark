<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Edit Review</h1>
        <div style="margin: 25px auto; width: 30%;">
            <form action="/companies/<%= companyId %>/reviews/<%= review._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="review[comment]" value="<%= review.comment %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-default btn-lg btn-block">Update</button>
                </div>
            </form>
            <a href="/companies/<%= companyId %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>