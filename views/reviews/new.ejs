<% include ../partials/header %>

<div class="container">
    <div class="row">
        <h1 class="text-center">Add Review To <%= company.name %></h1>
        <div style="margin: 25px auto; width: 30%;">
            <form action="/companies/<%= company._id %>/reviews" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="reviews[comment]" placeholder="Text">
                </div>
                <div class="form-group">
                    <button class="btn btn-default btn-lg btn-block">submit</button>
                </div>
            </form>
            <a href="/companies/<%= company._id %>">Back To <%= company.name %></a>
        </div>
    </div>
</div>

<% include ../partials/footer %>